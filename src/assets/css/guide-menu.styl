.bx-guide-home-buttons {
    > div {
        display: flex;
        flex-direction: row;
        gap: 12px;
    }

    &[data-is-playing="true"] {
        button[data-state='normal'] {
            display: none;
        }
    }

    &[data-is-playing="false"] {
        button[data-state='playing'] {
            display: none;
        }
    }
}
