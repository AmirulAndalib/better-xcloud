{
  "schema_version": 2,
  "name": "A Short Hike",
  "default_layout": "custom",
  "layouts": {
    "custom": {
      "name": "Custom",
      "content": {
        "left": {
          "inner": [
            {
              "type": "joystick",
              "axis": {
                "input": "axisXY",
                "output": "leftJoystick"
              },
              "relative": false
            }
          ]
        },
        "right": {
          "inner": [
            {
              "type": "button",
              "action": "gamepadY"
            },
            {
              "type": "button",
              "action": "gamepadB"
            },
            {
              "type": "button",
              "action": "gamepadA"
            },
            {
              "type": "button",
              "action": "gamepadX"
            }
          ]
        },
        "upper": {
          "right": [
            {
              "type": "button",
              "action": "menu"
            }
          ]
        }
      }
    }
  }
}
